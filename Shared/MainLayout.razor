@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.MudBlazor" Color="Color.Inherit" Link="https://mudblazor.com/" Target="_blank" />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/MudBlazor/MudBlazor/" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="DrawerOpen" Elevation="1">
        <MudDrawerHeader Class="drawer-header">
            <MudStack Spacing="0">
                <MudText Typo="Typo.subtitle1" Class="py-0 m-0 header-text">MudDataGrid</MudText>
                <MudText Typo="Typo.subtitle1" Class="py-0 m-0 header-text"> And TableSample</MudText>
            </MudStack>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-0 pt-0">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool DrawerOpen = true;

    void DrawerToggle()
    {
        DrawerOpen = !DrawerOpen;
    }
}
